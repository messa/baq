[flake8]

extend-exclude = venv,dist,build

extend-ignore =
    # at least two spaces before inline comment
    E261
    # block comment should start with '# '
    E265
    # too many blank lines
    E303
    # do not assign a lambda expression, use a def
    E731
    # line too long
    E501

# TODO: add max-complexity later; backup_file_contents() has complexity 26 now ':)
# max-complexity = 10

per-file-ignores =
    # imported but unused
    __init__.py: F401
